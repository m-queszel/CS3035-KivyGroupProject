<Label>:
    font_name: "RobotoMono-Regular"

<GameLayout>

    winLabel:winLabel
    scissors:scissors
    paper:paper
    rock:rock
    computerRoll:computerRoll
    score:score
    reset:reset

    GridLayout:
        
        cols: 1
        size: root.width, root.height
        pos_hint: {"center_x": 0.5}
        spacing: 20
        padding: 20

        Label:
            text: "ROCK PAPER SCISSORS"
            font_size: 24
            bold: True
            size_hint: (1, 0.2)
            pos_hint: {"center_x": 0.5}
            color: 0, 0, 0, 1
            
            canvas.after:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    points: self.x, self.y, self.right, self.y
                    width: 2

        BoxLayout:
        
            orientation: "horizontal"
            spacing: 20
            padding: 20
            size_hint: (1, 0.5)



            Button:
                background_normal: ""
                background_color: 151/255, 188/255, 98/255, 1
                size_hint:(0.5, None)
                pos_hint: {"center_y": 0.5}
                height: 150
                on_press: root.pressRock(self)
                id: rock

                Image:
                    source: "resources/protest.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                background_normal: ""
                background_color: 151/255, 188/255, 98/255, 1
                size_hint: (0.5, None)
                pos_hint: {"center_y": 0.5}
                height: 150
                on_press: root.pressPaper(self)
                id: paper

                Image:
                    source: "resources/stationery-stacked-papers.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                background_normal: ""
                background_color: 151/255, 188/255, 98/255, 1
                size_hint: (0.5, None)
                pos_hint: {"center_y": 0.5}
                height: 150
                on_press: root.pressScissors(self)
                id: scissors

                Image:
                    source: "resources/scissors.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

        Label:
            id: computerRoll
            font_size: 20
            text: "Select your throw!"
            color: 0, 0, 0, 1
            size_hint: (0.5, 0.2)

        Label:
            id: winLabel
            font_size: 20
            color: 0,0,0,1
            size_hint: (0.5, 0.2)



        BoxLayout:
        
            orientation: "vertical"
            spacing: 20
            padding: 20
            size_hint: (1, 0.4)

            Label:
                id: score
                font_size: 20
                color: 0,0,0,1

            Button:
                id: reset
                text: "Reset Game"
                font_size: 20
                color: 0, 0, 0, 1
                size_hint_x: None
                width: 200
                pos_hint: {"center_x": 0.5}
                background_normal: ""
                background_color: 151/255, 188/255, 98/255, 1
                on_press: root.resetGame(self)


            
